########################################
# WE NOW DEFINE THE FULL LIST OF ADDONS
#
.for def in ${DEFAULT_ADDONS}
PLIST_SUB+=	${def}=""
.endfor
ADDONS=		${DEFAULT_ADDONS}
.for opt in ${OPTIONS_GROUP_ADDONS}
.  if defined (WITH_${opt})
ADDONS+=	${opt}
PLIST_SUB+=	${opt}=""
.  else
PLIST_SUB+=	${opt}="@comment "
.  endif
.endfor
